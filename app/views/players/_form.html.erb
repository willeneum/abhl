<%= error_messages_for(@player) %>

<table summary = "player form fields">
		<tr>
			<th><%= f.label(:first_name, "First Name") %></th>
			<td><%= f.text_field(:first_name) %></td>
		</tr>
		<tr>
			<th><%= f.label(:last_name) %></th>
			<td><%= f.text_field(:last_name) %></td>
		</tr>
		<tr>
			<th><%= f.label(:email) %></th>
			<td><%= f.text_field(:email) %></td>
		</tr>
		<tr>
			<th><%= f.label(:team) %></th>
			<td><%= f.select(:team_id, @teams.map {|p| [p.name, p.id]}) %></td>
		</tr>
		<tr>
			<th><%= f.label(:admin) %></th>
			<td><%= f.check_box(:admin) %></td>
		</tr>
</table>