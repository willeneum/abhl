<h1>Games#delete</h1>

<%= form_for(:game, :url => {:action => 'destroy', :id => @game.id}) do |f| %>

	<p><%= @game.home_team.name %> at <%= @game.home_team.name %> @ <%= @game.game_time %></p>

	<p>Are you sure you want to delete this game?</p>

	<%= f.submit "Delete Game", :disable_with => 'Deleting Game...' %>
  
<% end %>
