<% @page_title = "Player Login" %>


<div class="login">
	<%= form_tag(:action => 'attempt_login') do %>
	  <table>
	  	<tr>
	  		<td><%= label_tag(:email) %></td>
	  		<td><%= text_field_tag(:email) %></td>
	  	</tr>
	  	<tr>
	  		<td><%= label_tag(:password) %></td>
	  		<td><%= text_field_tag(:password) %></td>
	  	</tr>
	  	<tr>
	  		<td>&nbsp;</td>
	  		<td><%= submit_tag("Login") %></td>
	  	</tr>
	  </table>
	<% end %>
</div>